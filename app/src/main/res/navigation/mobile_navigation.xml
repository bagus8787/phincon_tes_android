<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">

    <action
        android:id="@+id/actionToHome"
        app:destination="@id/homeFragment"/>

    <action
        android:id="@+id/actionToDetailPokemon"
        app:destination="@+id/detailPokemonFragment"/>

    <action
        android:id="@+id/actionToListFavorit"
        app:destination="@+id/listFavoriteFragment"/>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.gib.pokemon_bagus.view.fragment.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/detailPokemonFragment"
        android:name="com.gib.pokemon_bagus.view.fragment.DetailPokemonFragment"
        android:label="fragment_detail_pokemon"
        tools:layout="@layout/fragment_detail_pokemon" />
    <fragment
        android:id="@+id/listFavoriteFragment"
        android:name="com.gib.pokemon_bagus.view.fragment.ListFavoriteFragment"
        android:label="fragment_list_favorite"
        tools:layout="@layout/fragment_list_favorite" />
</navigation>